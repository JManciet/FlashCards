{% extends 'base.html.twig' %}

{% block title %}Hello UtilisateurController!{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
      <div class="success alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %}

   <h1>Liste des utilisateurs</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="deck_cartes">
            {% set nbrCarte = 0 %}
            {% for utilisateur in utilisateurs %}
            {% set nbrCarte = nbrCarte +1 %}
                <tr class="carte">
                    <td data-label="#">
                        {{ nbrCarte }}
                    </td>
                    <td data-label="Pseudo : ">
                    
                        <a href="{{ path('show_utilisateur', {'id': utilisateur.id}) }}">{{ utilisateur.pseudo }}</a>
                        
                    </td>
                    <td data-label="Email : ">
    
                        {{ utilisateur.email }}
                        
                    </td>
                    <td data-label="">
    
                        <a class="btn btn-danger" href="{{ path('delete_user', {'id': utilisateur.id}) }}">Supprimer cet utilisateur</a>
                        
                    </td>
                </tr>
            {% else %}
                Aucun utilisateur n'a été trouvé.
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
