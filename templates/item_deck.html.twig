<div class="item-deck tree-1">

    <div class="item-deck tree-1-1">

        <div class="item-deck tree-1-1-1">

            <div class="item-deck tree-1-1-1-1"><span>categorie : </span><span>{{ deck.categorie.nom }}</span></div>  
            <div class="item-deck tree-1-1-1-2"><a href="{{ path('app_play_deck', {'idUtilisateur': utilisateur.id,'idDeck': deck.id} ) }}">Mémoriser ce deck</a><span>{{ deck.cartes|length }} cartes</span></div>
        
        </div>
        <div class="item-deck tree-1-1-2">

            <div class="item-deck title">{{ deck.titre }}</div>
            <div>
                {% set isFavori = false %}
                {% if app.user %}
                    {% for favorib in app.user.favoris %}
                        {% if deck == favorib.deck %}
                            {% set isFavori = true %}
                        {% endif %}
                    {% endfor %}
                    
                    {% if isFavori %}
                        <i  data-deck-id="{{ deck.id }}" data-is-favori="1" class="add-favori red fa-solid fa-heart"></i>
                    {% else %}
                        <i  data-deck-id="{{ deck.id }}" data-is-favori="0" class="add-favori fa-solid fa-heart-circle-plus"></i>   
                    {% endif %}     
                    </button>
                {% endif %}
            </div>

        </div>

        <div class="item-deck tree-1-1-3">

                <div>
                    <span>par : </span><a href="{{ path('show_utilisateur', {'id': deck.utilisateur.id }) }}">{{ deck.utilisateur.pseudo }}</a>
                </div>
                <div>
                    Note avec étoiles
                </div>

        </div>
    </div>
    <div class="item-deck tree-1-2">
        <div class="item-deck tree-1-2-1"><span>description : </span>{{ deck.description }}</div>
        <div class="item-deck tree-1-2-2"><span>progression : </span> 

            <div class="progress-deck list">


                {% set nbrNoLevel = deck.cartes|length %}
                {% set nbrLevel0 = 0 %}
                {% set nbrLevel1 = 0 %}
                {% set nbrLevel2 = 0 %}
                {% for carte in deck.cartes %}

                    {% for positionCarte in carte.positionCartes|filter(positionCarte => positionCarte.utilisateur == app.user) %}

                        {% set nbrNoLevel = nbrNoLevel - 1 %}

                        {% if positionCarte.position == 0 %}

                            {% set nbrLevel0 = nbrLevel0 + 1 %}

                        {% elseif positionCarte.position == 1 %}

                            {% set nbrLevel1 = nbrLevel1 + 1 %}

                        {% elseif positionCarte.position == 1 %}

                            {% set nbrLevel2 = nbrLevel2 + 1 %}

                        {% endif %}

                    {% endfor %}

                {% endfor %}

                <div class="no-level" nbr="{{ nbrNoLevel }}"></div><div class="level-0" nbr="{{ nbrLevel0 }}"></div><div class="level-1" nbr="{{ nbrLevel1 }}"></div><div class="level-2" nbr="{{ nbrLevel2 }}"></div>
            </div>

        </div>
    </div>

</div>