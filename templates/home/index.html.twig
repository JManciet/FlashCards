{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

{% for message in app.flashes('warning') %}
    <div class="alert alert-warning mt-4">
    {{ message }}
    </div>
{% endfor %}

{% if app.user %}
<h1>Bienvenue {{ app.user.pseudo }}</h1>
{% endif %}
<br>
<form class="form-inline my-2 my-lg-0" method="GET" action="{{ path('search') }}">

    <input class="form-control mr-sm-2" type="search" placeholder="Rechercher un deck" aria-label="Rechercher" id="query" name="query" value="{{ app.request.query.get('query') }}" />
    <button type="submit" class="btn btn-outline-success my-2 my-sm-0"><i class="fas fa-search"></i></button>

</form>

